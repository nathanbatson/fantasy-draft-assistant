<div class="row-fluid">
  <div class="col-xs-6">
    <label ng-repeat="position in positions">
      <input
        type="checkbox"
        name="selectedPlayers[]"
        value="{{position}}"
        ng-checked="selected_positions.indexOf(position) > -1"
        ng-click="toggleSelection(position)"
      > {{position}} &nbsp;&nbsp;
    </label>
  </div>

  <div class="col-xs-6">
    <div class="form-group">
      <input type="search" ng-model="search" placeholder="Player Search" class="form-control">
    </div>
  </div>
</div>


<table class="table table-striped">
  <thead>
    <th>Rank</th>
    <th>Name</th>
    <th>Position</th>
    <th>Team</th>
    <th>Bye Week</th>
    <th>Projected Fantasy Points</th>
  </thead>
  <tr ng-repeat="player in players | filter:positionFilter | filter:draftedFilter | filter:search">
    <td>{{ player.overall_rank }}</td>
    <td>{{ player.name }}</td>
    <td>{{ player.position_name }}</td>
    <td>{{ player.team }}</td>
    <td>{{ player.bye_week }}</td>
    <td>{{ player.fpts }}</td>
    <td>
      <span class="glyphicon glyphicon-ok-circle green" ng-click="draftPlayer(player, 'me')"></span>
      &nbsp;
      <span class="glyphicon glyphicon-remove-circle red" ng-click="draftPlayer(player, 'other')"></span>
    </td>
  </tr>
</table>
